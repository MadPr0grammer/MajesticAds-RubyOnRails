<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <br>
      <button class="btn btn-primary"><a style="text-decoration: none; font-family: roboto, sans-serif; font-size: 17px; color: #fff;" href="http://gravatar.com/emails" rel="noopener" target="_blank">Change</a></button>
    </div>
  </div>
</div>